#! /usr/bin/env ruby

require "clamp"
require "time"

Clamp do

  option ["-n", "--count"], "SECONDS", "number to generate", &method(:Integer)
  option ["-d", "--delay"], "SECONDS", "delay between timestamps", &method(:Integer)
  option ["-f", "--filler"], "N", "append N bytes of filler", &method(:Integer)

  def execute
    if count
      count.times { emit }
    else
      loop { emit }
    end
  end

  private

  def emit
    message = Time.now.iso8601
    if filler
      message << " "
      message << ("X" * filler)
    end
    puts message
    sleep(delay) if delay
  end

end
